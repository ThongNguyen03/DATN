@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize tooltips
            $('[data-toggle="tooltip"]').tooltip();
        });

        // Thêm vào phần JavaScript
        function prepareStatusUpdate(orderId, status) {
            $('#updateOrderId').val(orderId);
            $('#updateStatus').val(status);

            // Hiển thị thông báo xác nhận phù hợp
            if (status === "Đã giao") {
                $('#statusConfirmMessage').html('Bạn có chắc chắn muốn xác nhận đơn hàng này đã được giao?');
                $('#imageUploadSection').removeClass('d-none');
            } else {
                $('#statusConfirmMessage').html('Bạn có chắc chắn muốn cập nhật trạng thái đơn hàng thành "' + status + '"?');
                $('#imageUploadSection').addClass('d-none');
            }
        }

        // Đảm bảo modal đóng đúng cách
        $('#updateStatusModal').on('hidden.bs.modal', function () {
            $('#updateStatusForm').trigger('reset');
            $('#imagePreview').addClass('d-none');
            $('#imagePreview img').attr('src', '');
            $('.custom-file-label').html('Chọn ảnh...');
        });

        // Hiện tên file khi chọn
        $('#anhXacNhan').change(function (e) {
            if (e.target.files.length > 0) {
                var fileName = e.target.files[0].name;
                $('.custom-file-label').html(fileName);

                // Preview image
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#imagePreview').removeClass('d-none');
                    $('#imagePreview img').attr('src', e.target.result);
                }
                reader.readAsDataURL(this.files[0]);
            }
        });

        function printInvoice() {
            var printContent = document.getElementById("invoiceContainer").innerHTML;
            var originalContent = document.body.innerHTML;

            document.body.innerHTML = printContent;
            window.print();
            document.body.innerHTML = originalContent;

            // Khởi tạo lại các thành phần JavaScript sau khi in
            initializeComponents();
        }

        function initializeComponents() {
            // Kích hoạt các tooltip
            $('[data-toggle="tooltip"]').tooltip();

            // Khởi tạo lại các modal nếu cần
            $('.modal').modal({
                show: false
            });
        }

        @* 30 / 3 / 2025 *@
            //// Show the image upload section when "Đã giao" status is selected
            $('.update-status-btn').click(function () {
                var newStatus = $(this).data('status');
                if (newStatus === "Đã giao") {
                    $('#imageUploadSection').removeClass('d-none');
                    $('#anhXacNhan').prop('required', true);
                } else {
                    $('#imageUploadSection').addClass('d-none');
                    $('#anhXacNhan').prop('required', false);
                }
            });

        // Show file name when selected
        $('#anhXacNhan').change(function (e) {
            var fileName = e.target.files[0].name;
            $('.custom-file-label').html(fileName);

            // Preview image
            var reader = new FileReader();
            reader.onload = function (e) {
                $('#imagePreview').removeClass('d-none');
                $('#imagePreview img').attr('src', e.target.result);
            }
            reader.readAsDataURL(this.files[0]);
        });

        // Validate form before submission
        $('#updateStatusForm').submit(function (e) {
            var newStatus = $('#updateStatus').val();
            if (newStatus === "Đã giao") {
                var fileInput = $('#anhXacNhan')[0];
                if (fileInput.files.length === 0) {
                    e.preventDefault();
                    alert('Vui lòng tải lên ảnh xác nhận giao hàng.');
                    return false;
                }

                var fileSize = fileInput.files[0].size / 1024 / 1024; // in MB
                if (fileSize > 5) {
                    e.preventDefault();
                    alert('Kích thước ảnh quá lớn. Vui lòng chọn ảnh có kích thước nhỏ hơn 5MB.');
                    return false;
                }
            }

            return true;
        });
        @* 30 / 3 / 2025 *@
    </script>
}