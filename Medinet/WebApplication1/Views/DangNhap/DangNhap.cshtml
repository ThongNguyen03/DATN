
@{
    ViewBag.Title = "DangNhap";
}

<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Đăng Nhập - Medinet</title>
    <link rel="icon" href="~/Content/images/favicon.ico" type="image/x-icon">
    <link rel="shortcut icon" href="~/Content/images/favicon.ico" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f4f6f9;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            margin: 0;
            font-family: 'Arial', sans-serif;
        }

        .login-container {
            display: flex;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            overflow: hidden;
            max-width: 100%;
            width: 80%;
        }

        .login-form {
            flex: 1;
            padding: 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .login-image {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }

            .login-image img.product-image {
                max-width: 80%;
                z-index: 10;
            }

            .login-image .product-count {
                position: absolute;
                bottom: 20px;
                right: 20px;
                background-color: red;
                color: white;
                padding: 5px 10px;
                border-radius: 20px;
                font-weight: bold;
            }

        .form-control {
            margin-bottom: 15px;
        }

        .btn-primary {
            width: 100%;
            padding: 10px;
            background-color: #0d6efd;
            border: none;
        }

        .login-links {
            display: flex;
            justify-content: space-between;
            margin-top: 15px;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-form">
            <div class="text-center mb-4">
                <img src="~/Content/images/medinet-logo.png" alt="Medinet Logo" height="50" class="mb-3">
                <h2>Đăng nhập vào tài khoản của bạn</h2>
                <p class="text-muted">Nhập thông tin đăng nhập của bạn để truy cập vào tài khoản của bạn.</p>
            </div>

            <form method="post" action="@Url.Action("DangNhap", "DangNhap")">
                @if (!string.IsNullOrEmpty(ViewBag.MessageLogin))
                {
                    <div class="alert alert-danger mb-3">
                        @ViewBag.MessageLogin
                    </div>
                }
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" name="Email" class="form-control" placeholder="Nhập email" required />
                </div>
                <div class="form-group">
                    <label>Mật khẩu</label>
                    <input type="password" name="password" class="form-control" placeholder="Nhập mật khẩu" required />
                </div>
                <button type="submit" class="btn btn-primary">Đăng nhập</button>
                <div class="login-links">
                    <a href="~/QuenMatKhau/Index">Quên mật khẩu?</a>
                    <p>Bạn chưa có tài khoản? <a href="~/DangKy/DangKy"> Đăng ký</a></p>
                </div>
            </form>
        </div>

        <div class="login-image">
            <img src="~/Content/images/product-image.png" alt="Rich Blood Product" class="product-image">
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>

