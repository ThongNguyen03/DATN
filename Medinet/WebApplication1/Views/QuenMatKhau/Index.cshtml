@{
    ViewBag.Title = "Quên Mật Khẩu";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Quên Mật Khẩu - Medinet</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f4f6f9;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            margin: 0;
            font-family: 'Arial', sans-serif;
        }

        .reset-container {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            overflow: hidden;
            max-width: 100%;
            width: 500px;
            padding: 40px;
        }

        .form-control {
            margin-bottom: 15px;
        }

        .btn-primary {
            width: 100%;
            padding: 10px;
            background-color: #0d6efd;
            border: none;
        }

        .links {
            margin-top: 15px;
            font-size: 0.9rem;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="reset-container">
        <div class="text-center mb-4">
            <img src="~/Content/images/medinet-logo.png" alt="Medinet Logo" height="50" class="mb-3">
            <h2>Quên mật khẩu</h2>
            <p class="text-muted">Vui lòng nhập email đã đăng ký để nhận mã xác nhận.</p>
        </div>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-danger">
                @ViewBag.Message
            </div>
        }

        @if (ViewBag.Success != null)
        {
            <div class="alert alert-success">
                @ViewBag.Success
            </div>
            <a href="@Url.Action("NhapMaXacNhan", "QuenMatKhau")" class="btn btn-primary mb-3">
                Tiếp tục nhập mã xác nhận
            </a>
        }
        else
        {
            <form method="post" action="@Url.Action("Index", "QuenMatKhau")">
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" name="Email" class="form-control" placeholder="Nhập email đã đăng ký" required />
                </div>
                <button type="submit" class="btn btn-primary">Gửi mã xác nhận</button>
            </form>
        }

        <div class="links">
            <a href="@Url.Action("DangNhap", "DangNhap")">Quay lại trang đăng nhập</a>
        </div>
    </div>
</body>
</html>
