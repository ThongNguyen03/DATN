@model WebApplication1.Models.GiaoDich
@{
    ViewBag.Title = "Chi tiết giao dịch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Sidebar styles */
    .seller-sidebar {
        background-color: #ffffff;
        border: 1px solid #e9ecef;
    }

        .seller-sidebar .card-header {
            background-color: #f8f9fa;
            color: #212529;
            border-bottom: 1px solid #e9ecef;
        }

        .seller-sidebar .list-group-item {
            background-color: transparent;
            color: #212529;
            border-color: #e9ecef;
        }

            .seller-sidebar .list-group-item:hover {
                background-color: #f8f9fa;
            }

            .seller-sidebar .list-group-item.active {
                background-color: #007bff;
                border-color: #007bff;
                color: #ffffff;
            }

    /* Transaction detail styles */
    .transaction-detail-card {
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
        background-color: #fff;
    }

    .transaction-header {
        padding: 20px;
        background: linear-gradient(135deg, #007bff, #0056b3);
        color: white;
        position: relative;
    }

    .transaction-title {
        font-size: 1.4rem;
        font-weight: 600;
        margin-bottom: 10px;
    }

    .transaction-id {
        font-size: 0.9rem;
        opacity: 0.9;
        margin-bottom: 5px;
    }

    .transaction-date {
        font-size: 0.9rem;
        opacity: 0.9;
    }

    .transaction-status {
        position: absolute;
        top: 20px;
        right: 20px;
        padding: 5px 15px;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.85rem;
    }

    .status-completed {
        background-color: rgba(255, 255, 255, 0.3);
    }

    .status-pending {
        background-color: rgba(255, 215, 0, 0.9);
        color: #212529;
    }

    .transaction-body {
        padding: 20px;
    }

    .transaction-section {
        margin-bottom: 30px;
    }

    .section-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #343a40;
        margin-bottom: 15px;
        padding-bottom: 10px;
        border-bottom: 1px solid #e9ecef;
    }

    .detail-item {
        display: flex;
        margin-bottom: 15px;
    }

    .detail-label {
        width: 40%;
        color: #6c757d;
        font-weight: 500;
    }

    .detail-value {
        width: 60%;
        font-weight: 600;
        color: #343a40;
    }

    .transaction-amount {
        text-align: center;
        padding: 20px;
        margin-bottom: 20px;
        background-color: #f8f9fa;
        border-radius: 8px;
    }

    .amount-value {
        font-size: 2.2rem;
        font-weight: 700;
        color: #343a40;
        margin-bottom: 5px;
    }

    .amount-label {
        color: #6c757d;
        font-size: 0.9rem;
    }

    .badge-completed {
        background-color: #28a745;
        color: white;
    }

    .badge-pending {
        background-color: #ffc107;
        color: #212529;
    }

    .badge-cancelled {
        background-color: #dc3545;
        color: white;
    }

    /* Order summary card */
    .order-summary-card {
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        background-color: #fff;
        margin-bottom: 20px;
    }

    .order-header {
        padding: 15px;
        background-color: #f8f9fa;
        border-bottom: 1px solid #e9ecef;
    }

    .order-title {
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 0;
    }

    .order-body {
        padding: 15px;
    }

    .order-item {
        display: flex;
        margin-bottom: 10px;
        padding-bottom: 10px;
        border-bottom: 1px solid #f2f2f2;
    }

        .order-item:last-child {
            margin-bottom: 0;
            padding-bottom: 0;
            border-bottom: none;
        }

    .item-image {
        width: 50px;
        height: 50px;
        margin-right: 15px;
        border-radius: 5px;
        overflow: hidden;
    }

        .item-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .item-details {
        flex-grow: 1;
    }

    .item-name {
        font-weight: 600;
        margin-bottom: 3px;
    }

    .item-price {
        color: #6c757d;
        font-size: 0.9rem;
    }

    .item-quantity {
        color: #007bff;
        font-weight: 600;
        text-align: right;
    }
</style>

